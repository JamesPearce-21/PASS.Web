<section class="home-learning">
    <div class="home-header">
        <h1>Home Learning</h1>
        <p>Select your child’s year group to access interactive learning videos.</p>
    </div>

    <!-- Step 1: Year Group Buttons -->
    <div class="year-buttons" id="yearMenu">
        <button class="year-btn" data-group="eyfs">EYFS</button>
        <button class="year-btn" data-group="y1-2">Years 1-2</button>
        <button class="year-btn" data-group="y3-4">Years 3-4</button>
        <button class="year-btn" data-group="y5-6">Years 5-6</button>
    </div>

    <!-- Step 2: Category Buttons (hidden initially) -->
    <div class="category-section hidden" id="categorySection">
        <button id="backToYears" class="back-button">← Back to Years</button>
        <div class="category-buttons" id="categoryButtons"></div>
    </div>

    <!-- Step 3: Playlist -->
    <div class="video-section hidden" id="videoSection">
        <button id="backToCategories" class="back-button">← Back to Categories</button>
        <div class="video-grid" id="videoGrid"></div>
    </div>
</section>
