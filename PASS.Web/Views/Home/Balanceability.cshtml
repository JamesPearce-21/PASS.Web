@{
    ViewData["Title"] = "Balanceability";
}

@section Styles {
        <link rel="stylesheet" href="~/css/Balanceability.css" asp-append-version="true" />
}

<section class="balanceability-section">
    <div class="balanceability-grid">
        <div class="text-content">
            <h1 class="fade-in">Balanceability</h1>
            <p class="lead fade-in delay-1">
                The UK's only <strong>afPE Approved</strong> Learn to Cycle programme for children in EYFS & KS1 — with resources, equipment, and staff training.
            </p>
            <p class="fade-in delay-2">
                Balanceability is a nationwide cycling programme used in schools, councils and leisure centres. 33% of children can't ride a bike (British Cycling/YouGov 2018), missing out on life-changing skills.
            </p>
            <p class="fade-in delay-2">
                Designed with child development experts and cycling professionals, Balanceability ensures every child can build confidence and independence.
            </p>
            <ul class="fade-in delay-3">
                <li>✔ afPE Approved for children aged 2½+</li>
                <li>✔ Builds confidence & independent riding</li>
                <li>✔ Equipment packs, training & full support</li>
                <li>✔ Fits into regular PE lessons</li>
            </ul>
        </div>
        <div class="image-content fade-in delay-4">
            <div class="image-card">
                <img src="/Assets/Images/balanceability-header.jpg" alt="Child learning to ride a balance bike">
            </div>
        </div>
    </div>
</section>
