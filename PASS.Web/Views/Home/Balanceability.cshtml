@{
    ViewData["Title"] = "Balanceability";
}

@section Styles {
    <link rel="stylesheet" href="~/css/Balanceability.css" asp-append-version="true" />
}

@await Html.PartialAsync("Header")

<!-- Hero Section -->
<section class="balanceability-hero">
    <div class="hero-content">
        <h1>Balanceability</h1>
        <p>The UK's only <strong>afPE Approved</strong> Learn to Cycle programme.</p>
    </div>
</section>

<!-- Content Section -->
<section class="balanceability-content">
    <div class="balanceability-wrapper">
        <div class="balanceability-text">
            <h2>Why Choose Balanceability?</h2>
            <p>Balanceability is a <strong>national programme</strong> designed for <strong>EYFS and KS1</strong>, providing a structured approach for children to learn cycling at an early stage.</p>
            <ul>
                <li><strong>Certified Programme: </strong> Official afPE Approved Learn to Cycle course.</li>
                <li><strong>Confidence & Safety: </strong> Helps kids develop key cycling skills safely.</li>
                <li><strong>Schools & Communities: </strong> Available nationwide to schools & local authorities.</li>
                <li><strong>Industry Experts: </strong> Developed with cycling professionals & child development specialists.</li>
            </ul>
        </div>
        <div class="balanceability-images">
            <img src="/Assets/Images/test-balance-image.jpg" alt="Child on balance bike">
            <img src="/Assets/Images/test-balance-image-2.jpg" alt="Cycling training session">
        </div>
    </div>
</section>

<!-- Testimonial Section -->
<section class="testimonial-section">
    <div class="testimonial-container">
        <blockquote>
            <p>"Since introducing Balanceability, we’ve seen a huge improvement in children's cycling confidence. A fantastic initiative!"</p>
            <cite>- PE Teacher, London</cite>
        </blockquote>
    </div>
</section>
